/* hole-shaft.wxss */
.container {
  padding: 20px;
}

.page-header {
  margin: 20rpx 0 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.page-subtitle {
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 30rpx;
  color: #666;
}

.form-group {
  margin-bottom: 20px;
}

.form-label {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333;
}

.form-input {
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 0 10px;
  font-size: 16px;
}

.form-picker {
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 0 10px;
  font-size: 16px;
  background-color: #fff;
}

.picker {
  color: #333;
}

.radio-group {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 20px;
}

.query-btn {
  margin-top: 20px;
  height: 45px;
  font-size: 18px;
  background-color: #07c160;
  border: none;
}

.result-container {
  margin-top: 30px;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f8f8f8;
}

.result-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  color: #333;
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
}

.result-item {
  display: flex;
  margin-bottom: 10px;
}

.item-label {
  width: 120px;
  color: #666;
}

.item-value {
  flex: 1;
  color: #333;
}

.dimension-display {
  margin: 10px 0;
  font-size: 18px;
  display: flex;
  align-items: center;
}

.tolerance {
  margin-left: 4px;
  font-size: 16px;
}

.deviation-container {
  display: inline-block;
  margin-left: 6px;
  position: relative;
  width: 40px;
  height: 20px;
}

.upper-deviation {
  position: absolute;
  top: -5px;
  font-size: 12px;
  text-align: center;
  width: 100%;
}

.lower-deviation {
  position: absolute;
  bottom: -5px;
  font-size: 12px;
  text-align: center;
  width: 100%;
}