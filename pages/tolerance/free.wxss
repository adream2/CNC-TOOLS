.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.page-header {
  margin: 20rpx 0 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.page-subtitle {
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 30rpx;
  color: #666;
}

.query-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  background-color: #fff;
}

.arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
}

.input {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.error-msg {
  color: #f56c6c;
  font-size: 24rpx;
  margin-top: 10rpx;
  min-height: 30rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.reset-btn, .query-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-radius: 50rpx;
}

.reset-btn {
  margin-right: 20rpx;
  background-color: #e5e5e5;
  color: #666;
}

.query-btn {
  background-color: #1890ff;
  color: #fff;
}

.result-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.standard-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.text-red {
  color: #f56c6c;
  font-weight: bold;
}
    