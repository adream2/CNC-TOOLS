.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.grid-item {
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
}