<view class="container">
  <view class="header">
    <text class="title">车床M代码查询</text>
    <picker bindchange="bindSystemChange" value="{{systemIndex}}" range="{{systems}}">
      <view class="picker">
        当前系统: {{systems[systemIndex]}}
      </view>
    </picker>
  </view>

  <scroll-view class="code-list" scroll-y>
    <view class="code-item" wx:for="{{codes}}" wx:key="id">
      <view class="code-name">{{item.code}}</view>
      <view class="code-desc">{{item.description}}</view>
    </view>
  </scroll-view>
</view>