.container {
  padding: 20rpx;
  font-size: 32rpx;
}
.header {
  display: flex;
  align-items: center;
}

.article-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
}

.header {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.content {
  line-height: 60rpx;
  color: #666;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.content text {
  display: block;
  margin: 10rpx 0;
}

.update-log-btn {
  margin: 20rpx 0;
  padding: 15rpx;
  background-color: #0066CC;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
}

/* 更新日志样式优化 */
.update-log-content {
  white-space: pre-line; /* 保留文本中的换行符 */
  line-height: 1.8; /* 增加行高提升可读性 */
  padding: 20rpx; /* 内边距 */
  font-size: 28rpx; /* 字体大小 */
  color: #333; /* 字体颜色 */
  background-color: #fff; /* 背景色 */
  border-radius: 10rpx; /* 圆角 */
  max-height: 600rpx; /* 最大高度 */
  overflow-y: auto; /* 内容溢出时显示滚动条 */
}

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999; /* 确保弹窗在最上层 */
}

/* 弹窗容器 */
.modal-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
}

/* 弹窗标题 */
.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee; /* 标题下划线 */
  text-align: center;
}

/* 弹窗关闭按钮 */
.modal-close-btn {
  margin-top: 25rpx;
  width: 100%;
  background-color: #0066CC;
  color: white;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 30rpx;
}