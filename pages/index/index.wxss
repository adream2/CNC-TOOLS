.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin: 40rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #0066CC;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.grid-item {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 180rpx;
}

.icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.text {
  font-size: 26rpx;
  color: #333333;
  word-break: break-all;
}