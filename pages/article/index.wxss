/* 分类容器 */
.category-container {
  background-color: #fff;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.category-scroll {
  white-space: nowrap;
  width: 100%;
}

.category-list {
  display: inline-block;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.category-item.active {
  background-color: #007AFF;
  color: #fff;
}

/* 文章列表 */
.posts-container {
  padding: 20rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 20rpx;
}

.post-content {
  display: flex;
}

.post-thumb {
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.post-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-category {
  align-self: flex-start;
  background-color: #f0f0f0;
  padding: 5rpx 15rpx;
  border-radius: 5rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  white-space: nowrap;
}

.post-meta-row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.meta-item {
  position: relative;
  padding-left: 15rpx;
  white-space: nowrap;
}

.meta-item::before {
  content: '';
  display: inline-block;
  width: 4rpx;
  height: 4rpx;
  background-color: #999;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  margin-right: 10rpx;
}

.meta-item:first-child::before {
  display: none;
}

/* 加载提示 */
.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #999;
}