.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.calculate-btn {
  width: 100%;
  height: 90rpx;
  background-color: #0066CC;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.result-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  text-align: center;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.result-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}