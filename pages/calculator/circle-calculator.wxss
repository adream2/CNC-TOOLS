.container {
  padding: 20rpx;
  font-family: Arial, sans-serif;
}

.section {
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.page-header {
  display: flex;
  justify-content: center;
  margin: 0 0 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.input-group {
  margin-bottom: 25rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.coordinate-inputs {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.separator {
  font-size: 32rpx;
  color: #999;
}

.calculate-btn {
  width: 100%;
  height: 90rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 20rpx 0 30rpx;
}

.result-group {
  padding: 20rpx;
  background-color: #e8f4fd;
  border-radius: 8rpx;
}

.result-item {
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.result-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}