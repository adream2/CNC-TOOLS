.container {
  padding: 20rpx;
  font-family: Arial, sans-serif;
}

.page-header {
  display: flex;
  justify-content: center;
  margin: 0 0 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.converter-section {
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #555;
  padding-left: 10rpx;
  border-left: 6rpx solid #007aff;
}

.input-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.single-input {
  justify-content: flex-start;
}

.input-field {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.unit {
  font-size: 28rpx;
  color: #666;
  margin-right: 15rpx;
}

.convert-btn {
  background-color: #007aff;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.result {
  padding: 20rpx;
  background-color: white;
  border-radius: 8rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.result-value {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}