.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.input-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #0066CC;
}

.input-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.input-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

input {
  width: 100%;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
}

.unit-btn {
  margin-left: 10rpx;
  padding: 0 15rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.convert-btn {
  width: 100%;
  height: 80rpx;
  background-color: #0066CC;
  color: white;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.result-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.result-text {
  font-size: 32rpx;
  color: #0066CC;
  font-weight: bold;
}

.diagram-container {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.diagram-image {
  width: 80%;
  max-width: 400rpx;
}