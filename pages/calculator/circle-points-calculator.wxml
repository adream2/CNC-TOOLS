<view class="container">
  <view class="page-header">
    <text class="page-title">圆周均点计算器</text>
  </view>

  <view class="input-section">
    <view class="input-item">
      <text class="label">基圆X坐标:</text>
      <input type="text" bindinput="bindBaseXInput" placeholder="输入基圆中心X坐标" class="input"/>
    </view>
    <view class="input-item">
      <text class="label">基圆Y坐标:</text>
      <input type="text" bindinput="bindBaseYInput" placeholder="输入基圆中心Y坐标" class="input"/>
    </view>
    <view class="input-item">
      <text class="label">基圆半径:</text>
      <input type="text" bindinput="bindRadiusInput" placeholder="输入基圆半径" class="input"/>
    </view>
    <view class="input-item">
      <text class="label">均匀孔数:</text>
      <input type="text" bindinput="bindHoleCountInput" placeholder="输入均匀分布孔数" class="input"/>
    </view>
    <view class="input-item">
      <text class="label">起始角度 (°):</text>
      <input type="text" bindinput="bindStartAngleInput" placeholder="输入起始角度" class="input"/>
    </view>
  </view>

  <view class="diagram-container">
    <image src="/icons/circle-points-diagram.svg" class="diagram-image"></image>
  </view>

  <view class="button-group">
    <button bindtap="calculate" class="calculate-btn">计算</button>
    <button bindtap="clearInput" class="clear-btn">清空</button>
  </view>

  <view class="result-section" wx:if="{{showResult}}">
    <text class="result-title">计算结果:</text>
    <view class="result-table">
      <view class="table-header">
        <text class="table-cell">序号</text>
        <text class="table-cell">X坐标</text>
        <text class="table-cell">Y坐标</text>
      </view>
      <view class="table-row" wx:for="{{points}}" wx:key="index">
        <text class="table-cell">{{index + 1}}</text>
        <text class="table-cell">{{item.x}}</text>
        <text class="table-cell">{{item.y}}</text>
      </view>
    </view>
    <button bindtap="copyResult" class="copy-btn" wx:if="{{showResult}}">复制结果</button>
  </view>
</view>