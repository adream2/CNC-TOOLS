.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  margin: 20rpx 0 40rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.input-section {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.calculation-type {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.radio-group {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.radio-label radio {
  margin-right: 15rpx;
}

.input-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.calculate-btn {
  width: 100%;
  height: 90rpx;
  background-color: #0066CC;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.result-section {
  margin-top: 30rpx;
}

.result-card {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0066CC;
  margin-bottom: 20rpx;
  display: block;
}

.result-item {
  display: flex;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-label {
  width: 200rpx;
  font-size: 28rpx;
  color: #666666;
}

.result-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.result-formula {
  margin-top: 20rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.formula-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 10rpx;
}

.formula-content {
  font-size: 26rpx;
  color: #333333;
  font-family: monospace;
}