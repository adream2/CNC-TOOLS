.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.picker {
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.6;
}

.conversion-area {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.unit-selector {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.swap-btn {
  width: 70rpx;
  height: 70rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0,122,255,0.3);
}

.swap-icon {
  width: 40rpx;
  height: 40rpx;
  transform: rotate(90deg);
  fill: white;
}

.input-output {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
}

.equals {
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
}

.output {
  flex: 1;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 32rpx;
  color: #007aff;
  font-weight: 500;
}

.precision-setting {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.unit-info {
  padding: 20rpx;
  background-color: #fff8e6;
  border-left: 6rpx solid #ffcc00;
  border-radius: 0 12rpx 12rpx 0;
}

.info-text {
  font-size: 24rpx;
  color: #ff9500;
  line-height: 1.5;
}