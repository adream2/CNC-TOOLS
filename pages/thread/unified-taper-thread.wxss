.container { padding: 30rpx; background-color: #f5f7fa; min-height: 100vh; }

.page-header {
  display: flex;
  justify-content: center;
  margin: 0 0 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.thread-selector {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  padding: 24rpx;
}

.selector-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.custom-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
}

.picker-text {
  font-size: 32rpx;
  color: #1a73e8;
  font-weight: 500;
}

.picker-arrow {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s ease;
}

.custom-picker:active .picker-content {
  border-color: #1a73e8;
}

.custom-picker:focus .picker-content {
  border-color: #1a73e8;
  box-shadow: 0 0 0 4rpx rgba(26, 115, 232, 0.1);
}

.parameter-table {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin: 0 30rpx 30rpx;
}

.table-title {
  display: block;
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.table-header {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #e1e5eb;
  margin-bottom: 10rpx;
  background-color: #f9fafb;
}

.table-row {
  display: flex;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.table-row:last-child {
  border-bottom: none;
}

.table-col {
  flex: 1;
  font-size: 28rpx;
}

.table-col:first-child {
  color: #666;
  padding-left: 10rpx;
}

.table-col:last-child {
  color: #1a73e8;
  font-weight: 500;
  text-align: right;
  padding-right: 10rpx;
}

.param-value {
  color: #1a73e8;
  font-weight: 500;
}

.divider {
  height: 1rpx;
  background-color: #e1e5eb;
  margin: 15rpx 0;
}