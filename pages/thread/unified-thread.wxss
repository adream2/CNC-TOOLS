.container { padding: 20rpx; background-color: #f5f5f5; min-height: 100vh; }

.page-header {
  text-align: center;
  margin: 30rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}
.selector-group { display: flex; flex-wrap: wrap; gap: 15rpx; margin-bottom: 30rpx; }
.selector-item { flex: 0 0 100%; }
@media (min-width: 750rpx) {
  .selector-item { flex: 0 0 calc(50% - 7.5rpx); }
}
.selector-item { min-width: 280rpx; background: #fff; border-radius: 12rpx; padding: 20rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); box-sizing: border-box; }
.label { display: block; font-size: 28rpx; color: #333; margin-bottom: 15rpx; font-weight: 500; }
.picker { display: flex; align-items: center; justify-content: space-between; height: 60rpx; padding: 0 15rpx; border: 1rpx solid #e5e5e5; border-radius: 8rpx; font-size: 28rpx; }
.arrow-icon { width: 30rpx; height: 30rpx; opacity: 0.6; }
.radio-group { display: flex; flex-wrap: wrap; gap: 15rpx; width: 100%; padding: 10rpx 0; }
.radio-label { display: flex; align-items: center; flex: 0 0 calc(50% - 7.5rpx); }
.radio-text { margin-left: 10rpx; font-size: 28rpx; color: #555; }
radio[checked] + .radio-text { color: #0066cc; font-weight: 500; }
.wx-radio-input { transform: scale(1.2); margin-right: 8rpx; }
.wx-radio-input[checked] { border-color: #0066cc !important; background-color: #0066cc !important; }
.result-card { background: #fff; border-radius: 12rpx; padding: 25rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05); }
.result-title { font-size: 30rpx; color: #222; margin-bottom: 20rpx; padding-bottom: 15rpx; border-bottom: 1rpx solid #f0f0f0; font-weight: 500; }
.param-table { width: 100%; border-collapse: collapse; }
.table-row { display: flex; padding: 15rpx 0; border-bottom: 1rpx solid #f5f5f5; }
.table-row:last-child { border-bottom: none; }
.table-row.header { background-color: #fafafa; font-weight: 500; }
.table-cell { flex: 1; text-align: center; font-size: 26rpx; }
.table-cell:first-child { text-align: left; padding-left: 10rpx; }
.spec-note { display: flex; justify-content: space-between; margin-top: 20rpx; padding-top: 15rpx; border-top: 1rpx dashed #eee; font-size: 24rpx; color: #666; }
.external-note { color: #0066cc; }
.internal-note { color: #009933; }