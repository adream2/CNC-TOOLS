.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin: 30rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0066CC;
}

.selector-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.selector-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  flex: 1;
  gap: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
}

.radio-text {
  margin-left: 8rpx;
  font-size: 32rpx;
  color: #555;
}

.selector-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 200rpx;
  font-size: 32rpx;
  color: #333;
}

.picker {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #555;
}

.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-table {
  width: 100%;
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid #f0f0f0;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row.header {
  background-color: #f9f9f9;
  font-weight: bold;
}

.table-cell {
  flex: 1;
  padding: 16rpx 10rpx;
  font-size: 30rpx;
  text-align: center;
}

.table-row:nth-child(even):not(.header) {
  background-color: #fafafa;
}